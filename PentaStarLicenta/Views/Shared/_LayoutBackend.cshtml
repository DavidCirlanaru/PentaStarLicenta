<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PentaStar</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/style/application")
    @Scripts.Render("~/bundles/modernizr")



</head>
<body>
    @*Header*@
    <nav data-bind="visible: backendHeader" class="navbar navbar-light bg-primary">
        <span class="navbar-brand mb-0 h1 mx-auto">Header</span>
    </nav>

    <div id="wrapper">
        <!-- Meniu -->
        <div data-bind="visible: backendMenu" id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Meniu
                    </a>
                </li>
                <li>
                    <a href="#">General</a>
                </li>
                <li>
                    <a href="#">Camere</a>
                </li>
                <li>
                    <a href="#">Statistici</a>
                </li>
            </ul>
        </div>

        <!--Content -->
        <div data-bind="visible: backendContent" id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row ">
                    @RenderBody()
                </div>
            </div>
        </div>

    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Vendors/knockout-3.4.2.js"></script>
    <script src="~/Scripts/Vendors/require.js"></script>
    @Scripts.Render("~/bundles/Application")
    <script>
        startApplication();
        ko.applyBindings(viewModelContent);
    </script>
</body>
</html>
