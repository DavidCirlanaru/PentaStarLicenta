<div id="accomodations" data-bind="visible: isViewVisible">

    @*Accomodations Tabel*@
    <table id="rooms-table" class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Data Sosire</th>
                <th scope="col">Data Plecare</th>
                <th scope="col"><button type="button" class="btn btn-success" data-toggle="modal" data-target="#accomodationsModal" data-whatever="getbootstreap">Adauga Rezervare</button></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: accomodations">
            <tr class="row-counter">
                <th scope="row"></th>
                <td data-bind="text: moment(OccupationDate).format('DD/MM/YYYY')"></td>
                <td data-bind="text: ReleaseDate"></td>
                <td>
                    <button class="btn btn-danger" data-bind="click: $parent.removeExistingAccomodation">Sterge</button>
                        @*<button class="btn btn-primary" data-toggle="modal" data-target="#roomTypesModalEdit" data-bind="click: $parent.editRoomType.bind(null, RoomTypeId)">Editeaza</button>*@
                </td>
            </tr>
        </tbody>
    </table>

    @*Modal Popup for adding Accomodations*@
    <div class="modal fade" id="accomodationsModal" tabindex="-1" role="dialog" aria-labelledby="accomodationsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="accomodationsModalLabel">Adauga Rezervare</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <label for="recipient-name" class="col-form-label">Data Sosire:</label>
                        <input type="text" class="form-control" data-bind="pikaday: { dateFormat: 'dd/mm/yy' }, value: newOccupationDate ">

                        <label for="recipient-name" class="col-form-label">Data Plecare:</label>
                        <input type="text" class="form-control" data-bind="pikaday: { dateFormat: 'dd/mm/yy' }, value: newReleaseDate">

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Inchide</button>
                    <button type="button" class="btn btn-success" data-bind="click: addNewAccomodation" data-dismiss="modal">Salveaza</button>
                </div>
            </div>
        </div>
    </div>

