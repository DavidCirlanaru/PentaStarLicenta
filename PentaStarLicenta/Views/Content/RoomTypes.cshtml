<div id="roomTypes" data-bind="visible: isViewVisible">

    @*RoomTypes Tabel*@
    <table id="rooms-table" class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Denumire</th>
                <th scope="col">Pret</th>
                <th scope="col"><button type="button" class="btn btn-success" data-toggle="modal" data-target="#roomTypesModal" data-whatever="getbootstrap">Adauga Camera</button></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: roomTypes">
            <tr class="row-counter">
                <th scope="row"></th>
                <td data-bind="text: Type"></td>
                <td data-bind="text: Price"></td>
                <td> <button class="btn btn-danger" data-bind="click: $parent.removeExistingRoomType">Sterge</button></td>
            </tr>
        </tbody>
    </table>

    @*Modal Popup for adding room types*@
    <div class="modal fade" id="roomTypesModal" tabindex="-1" role="dialog" aria-labelledby="roomTypesModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="roomTypesModalLabel">Adauga Tip Camera</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                       <label for="recipient-name" class="col-form-label">Tip:</label>
                       <input type="text" class="form-control" id="recipient-name" data-bind="textInput: newRoomTypeName">

                       <label for="recipient-name" class="col-form-label">Pret:</label>
                       <input type="text" class="form-control" id="recipient-name" data-bind="textInput: newRoomTypePrice">
                       
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Inchide</button>
                    <button type="button" class="btn btn-success" data-bind="click: addNewRoomType" data-dismiss="modal">Salveaza</button>
                </div>
            </div>
        </div>
    </div>
</div>

